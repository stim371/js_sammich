<%- model_class = SandwichOrder.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ordering_person) %></th>
      <th><%= model_class.human_attribute_name(:sandwich_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sandwich_orders.each do |sandwich_order| %>
      <tr>
        <td><%= link_to sandwich_order.id, sandwich_order_path(sandwich_order) %></td>
        <td><%= sandwich_order.ordering_person %></td>
        <td><%= sandwich_order.sandwich_type %></td>
        <td><%=l sandwich_order.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sandwich_order_path(sandwich_order), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sandwich_order_path(sandwich_order),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sandwich_order_path,
            :class => 'btn btn-primary' %>
